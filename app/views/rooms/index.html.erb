<% content_for :title, t('.title') %>
<div class="container pt-3">
<h2>参加済みルーム</h2>

<%= form_with url: search_path, method: :post, local: true do |f| %>
  <div class="form-group">
    <%= f.text_field :room_id, class: 'form-control', required: true, placeholder: 'ルームIDを入力' %>
    <%= f.submit 'ルームを検索する', class:"btn btn-primary" %>
  </div>
<% end %>

  <div class="row">
    <div class="col-12">
      <div class="row">
        <% if @rooms.present? %>
          <%= render @rooms %>
        <% else %>
          現在参加中のルームはありません
        <% end %>
      </div>
    </div>
    <%= paginate @rooms, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
