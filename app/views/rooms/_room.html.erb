<div class="col-sm-12 col-lg-4 mb-3">
  <div id="room-id-<%= room.id %>">
  <%= link_to room_path(room.id) do %>
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">
          <%= room.title %>
        </h4>
        <ul class="list-inline">
          <li>
            <% if current_user.owner?(room) %>
            <i class="fas fa-user"></i>
            <% else %>
            <i class="far fa-user"></i>
            <% end %>
             <%= room.user.name %>
          </li>
          <li><i class="far fa-calendar"></i> <%= l room.created_at, format: :short %></li>
        </ul>
        <div class='float-right'>
          <% if room.ready? %>
            <span class="badge bg-success text-light">
          <% elsif room.playing? %>
           <span class="badge bg-info text-light">
          <% elsif room.result? %>
           <span class="badge bg-warning text-dark">
          <% end %>
              <%= room.status_i18n %>
            </span>
          参加人数：<%= room.members.count %>人
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>