<div class="row">
  <div class="col-lg-8 offset-lg-2">
  <h1><%= @room.title %></h1>
    <h1><%= @room.hero_user.name %>になりきれ！</h1>
    <h2><%= @room.count_questons %>問目</h2>
    <p>参加人数：<%= @members.count %></p>
    <p>フェーズ：<%= @question.phase %></p>
    <% if @question.question? %>
      <%= render 'question' %>
    <% elsif @question.answer? %>
      <%= render 'answer' %>
    <% elsif @question.vote? %>
      <%= render 'vote' %>
    <% elsif @question.result? %>
      <%= render 'result' %>
    <% end %>
  </div>
</div>

<h2>最終結果</h2>
<%= @room.status %>
<table>
  <tbody>
  <% @room.results.each do |result| %>
  <tr>
    <th><%= result.whose %></th>
    <td><%= result.count_votes %>/<%= @room.count_total_votes %></td>
  </tr>
  <% end %>
  </tbody>
</table>

<% @room.result_answers.each do |question| %>
<h3><%= question.content %></h3>
<ul>
<% question.result_votes.each do |answer| %>
<li>
    <%= answer.user.name %>
    <%= answer.content %>
    <%= answer.count_votes %>/<%= question.count_votes %>
</li>
<% end %>
</ul>
<% end %>