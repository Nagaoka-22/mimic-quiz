<header>
  <div class="container d-flex align-items-center justify-content-between">
    <h1 class="logo">
      <%= link_to 'サイト名', root_path %>
    </h1>
    <nav class="header-nav">
      <ul class="d-flex align-items-center list-unstyled">
        <% if user_signed_in? %>
          <li class="mr-2"><%= link_to 'ルームの作成', '#' %></li>
          <li class="mr-2"><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></li>
        <% else %>
          <li class="mr-2"><%= link_to '新規登録', new_user_registration_path %></li>
          <li class="mr-2"><%= link_to 'ログイン', new_user_session_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>